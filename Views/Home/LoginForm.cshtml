@{
    ViewData["Title"] = "Login Page";
}
@model LoginUser

<h1>Login</h1>
<div style="width: 300px;">
    <form action="/login" method="post">
        <div class="form-group">
            <label>Email:</label>
            <input asp-for="LoginEmail" class="form-control">
            <span class="text-danger" asp-validation-for="LoginEmail"></span>
        </div>
        <div class="form-group">
            <label>Password:</label>
            <input asp-for="LoginPassword" class="form-control">
            <span class="text-danger" asp-validation-for="LoginPassword"></span>
        </div>
        <input type="submit" value="Login" class=" btn btn-info">
    </form>
</div>